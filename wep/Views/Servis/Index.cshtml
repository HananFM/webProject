@model IEnumerable<wep.Models.Servis>

@{
	ViewData["Title"] = "Servises";
}

<h1>Servises</h1>
<div class="alert-danger"> @TempData["msj"]</div>
@if (User.IsInRole("admin"))
{
	<p>
		<a class="btn btn-secondary" asp-action="Create">Create New</a>
	</p>
}
<table class="table">
	<thead>
		<tr class="table-light">
			<th>
				@Html.DisplayNameFor(model => model.ServisName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ServisFee)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.employee)
			</th>
			@if (User.IsInRole("admin"))
			{
				<th></th>
			}
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr class="table-secondary">
				<td>
					@Html.DisplayFor(modelItem => item.ServisName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ServisFee)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.employee.EmployeeName)
				</td>
				@if (User.IsInRole("admin"))
				{
					<td>
						<a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ServisID">Edit</a> |
						<a class="btn btn-info" asp-action="Details" asp-route-id="@item.ServisID">Details</a> |
						<a class="btn btn-warning" asp-action="Delete" asp-route-id="@item.ServisID">Delete</a>
					</td>
				}
			</tr>
		}
	</tbody>
</table>
