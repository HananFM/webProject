@model IEnumerable<wep.Models.Employee>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="alert-danger"> @TempData["msj"]</div>
<p>
	<a asp-action="EmployeeAdd">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.EmployeeName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.EmployeeSurname)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.EmployeeExperience)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.workingHours)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.EmployeeName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EmployeeSurname)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EmployeeExperience)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.workingHours)
				</td>
				<td>
					<a asp-action="EmployeeEdit" asp-route-id="@item.EmployeeID">Edit</a> |
					<a asp-action="EmployeeDetails" asp-route-id="@item.EmployeeID">Details</a> |
					<a asp-action="EmployeeDelete" asp-route-id="@item.EmployeeID">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
